# OpenAI API Key (optional, for AI Chat functionality)
NEXT_PUBLIC_OPENAI_API_KEY="YOUR_OPENAI_API_KEY"

# Anthropic (Claude) API Key (recommended for Claude Code)
ANTHROPIC_API_KEY="YOUR_ANTHROPIC_API_KEY"

# Particle Network Configuration
NEXT_PUBLIC_PARTICLE_PROJECT_ID="YOUR_PARTICLE_PROJECT_ID"
NEXT_PUBLIC_PARTICLE_CLIENT_KEY="YOUR_PARTICLE_CLIENT_KEY"
NEXT_PUBLIC_PARTICLE_APP_ID="YOUR_PARTICLE_APP_ID"

# Chatkit Configuration (Pusher Chatkit)
NEXT_PUBLIC_CHATKIT_INSTANCE_LOCATOR="YOUR_CHATKIT_INSTANCE_LOCATOR"
